<% content_for :page_title do %>
  轮播图片
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_banner), new_object_url, { class: "btn-success", icon: 'add', id: 'admin_new_banner' } %>
<% end if can?(:create, Spree::Banner) %>

<table class="table" id="listing_products">
  <thead>
  <tr data-hook="admin_products_index_headers">
    <th>图片</th>
    <th>位置</th>
    <th>产品名称</th>
  </tr>
  </thead>
  <tbody>
  <% @banners.each do |banner| %>
    <tr>
      <td class="image"><%= image_tag banner.image.attachment.url(:small, false), size: "150x100" %></td>
      <td><%= banner.site %></td>
      <td><%= link_to banner.product.try(:name) %></td>
      <td class="actions actions-3 text-right" data-hook="admin_products_index_row_actions">
        <%= link_to_edit banner, no_text: true, class: 'edit' if can?(:edit, banner) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
